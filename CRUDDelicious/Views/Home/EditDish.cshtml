@model Dish

<h1 class = "text-center"> Edit @Model.DishName</h1>
<a href="/">Home</a>

<div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form asp-action="Edit" method="post"> 
            <div class="form-group row">
                <span asp-validation-for="ChefName"></span>
                <label asp-for="ChefName" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="ChefName" value=@Model.ChefName>
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="DishName"></span>
                <label asp-for="DishName" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="DishName" value=@Model.DishName>
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="calories"></span>
                <label asp-for="calories" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="number" class="form-control form-control-sm" id="colFormLabel"  asp-for="calories" value=@Model.calories>
                </div>
                <input type="hidden"  asp-for="DiSId" value=@Model.DiSId>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <select class="custom-select mr-sm-2"  asp-for="Tastiness" id="inlineFormCustomSelect" value=@Model.Tastiness>
                
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                </div>
            </div>
          
            <div class="form-group row">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description" class="col-sm-2 col-form-label "></label> 
                <div class="col-sm-10">
                <textarea class="form-control form-control-lg" id="colFormLabelLg"   asp-for="Description"> @Model.Description </textarea>
                </div>
            </div>
            <button type="submit">Edit Dish</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>